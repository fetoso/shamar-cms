<div class="col-md-10 col-sm-12 col-centered">
  <div class="bs-component shamar-table">
      <table class="table table-striped table-hover ">
        <thead>
          <tr>
            <!-- <th class='hidden-xs'>#</th> -->
            <th>Name</th>
            <th class='hidden-xs'>Email</th>
            <th class='hidden-xs'>Is Admin</th>
            <th>Controls</th>
          </tr>
        </thead>
        <tbody>
          {{#each items as |item|}}
            <tr>
              <!-- <td class='hidden-xs'>{{item.id}}</td> -->
              <td>{{item.first_name}} {{item.last_name}}</td>
              <td class='hidden-xs'>{{item.email}}</td>
              <td class='hidden-xs'>{{item.is_admin}}</td>
              <td>
                <div class="bs-component table-commands">
                  <div class="btn-group btn-group-justified">
                    {{#link-to 'users.user' item class="btn btn-default send" }}EDIT{{/link-to}}
                    <a href="#" class="btn btn-default cancel" {{action 'deleteUser' item}}>DELETE</a>
                  </div>
                </div>
              </td>
            </tr>
          {{/each}}
        </tbody>
      </table>
    </div>
</div>
