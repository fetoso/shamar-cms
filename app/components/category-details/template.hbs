<div class="row" style='position: absolute;left:0; width: 100%; height: 100%; margin:0;padding:0;background-color:rgba(0,0,0,.8);z-index:10;'>
    <div class="col-lg-5 col-md-8 col-sm-12 col-centered">

      <div class="well bs-component shamar-form">
        <form class="form-horizontal" {{action 'submit' on='submit'}}>
          <fieldset>
            <legend>Edit Category</legend>
            <div class="form-group">
              <div class="col-lg-12">
                {{input class="form-control" placeholder="Name" value=item.name}}
              </div>
            </div>
            <div class="form-group">
              <div class="col-lg-12">
                <div class="select-container">
                  {{#x-select class="form-control" value=item.is_active action='selectActiveStatus' as |xs|}}
                    {{#xs.option value=false}}Inactive{{/xs.option}}
                    {{#xs.option value=true}}Active{{/xs.option}}
                  {{/x-select}}
                </div>
              </div>
            </div>

            <div class="form-group">
              <div class="col-sm-12">
                <div class="bs-component form-commands">
                  <div class="btn-group btn-group-justified">
                    <style media="screen">
                      .btn.btn-default.cancel {
                        width: 50%;
                      }
                    </style>
                    {{#link-to 'categories' class="btn btn-default cancel"}}CANCEL{{/link-to}}
                    <button type="submit" class="btn btn-default send" style="width: 100%">SUBMIT</button>
                  </div>
                </div>
              </div>
            </div>
          </fieldset>
        </form>
      </div>

    </div>
</div>
