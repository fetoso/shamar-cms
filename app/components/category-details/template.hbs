<div class="col-lg-5 col-md-8 col-sm-12 col-centered">

  <div class="well bs-component shamar-form">
    <form class="form-horizontal" {{action 'submit' on='submit'}}>
      <fieldset>
        <legend>Edit Category</legend>
        <div class="form-group">
          <div class="col-lg-12">
            {{input class="form-control" placeholder="Name" value=item.name}}
          </div>
        </div>
        <div class="form-group">
          <div class="col-lg-12">
            {{input class="form-control" placeholder="Slug" value=item.slug}}
          </div>
        </div>

        <div class="form-group">
          <div class="col-sm-12">
            <div class="bs-component form-commands">
              <div class="btn-group btn-group-justified">
                <a class="btn btn-default cancel" style="width: 50%">CANCEL</a>
                <button type="submit" class="btn btn-default send" style="width: 100%">SUBMIT</button>
              </div>
            </div>
          </div>
        </div>
      </fieldset>
    </form>
  </div>

</div>
