<div class="col-md-10 col-sm-12 col-centered">
  <div class="bs-component shamar-table">
      <table class="table table-striped table-hover ">
        <thead>
          <tr>
            <th class='hidden-xs'>#</th>
            <th>Name</th>
            <th class='hidden-xs'>User Id</th>
            <th class='hidden-xs'>Status</th>
            <th>Controls</th>
          </tr>
        </thead>
        <tbody>
          {{#each items as |item|}}
            <tr>
              <td class='hidden-xs'>{{item.id}}</td>
              <td>{{#link-to 'videos.preview' item }}{{item.name}}{{/link-to}}</td>
              <td class='hidden-xs'>{{item.user_id}}</td>
              <td class='hidden-xs'>{{item.status}}</td>
              <td>
                <div class="bs-component table-commands">
                  <div class="btn-group btn-group-justified">
                    <a href="#" class="btn btn-default send">EDIT</a>
                    <a href="#" class="btn btn-default cancel">DELETE</a>
                  </div>
                </div>
              </td>
            </tr>
          {{/each}}
        </tbody>
      </table>
    </div>
</div>
